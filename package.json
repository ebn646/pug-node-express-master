{
  "name": "boilerplate-node-express",
  "version": "1.0.0",
  "description": "A website boilerplate using Node+Express, Webpack, Sass, PostCSS (Autoprefixer) and Pug/Jade templates",
  "author": "John Hildenbiddle",
  "license": "MIT",
  "homepage": "https://github.com/jhildenbiddle/boilerplate-node-express#readme",
  "repository": {
    "type": "git",
    "url": "git+https://jhildenbiddle@github.com/jhildenbiddle/boilerplate-node-express.git"
  },
  "bugs": {
    "url": "https://github.com/jhildenbiddle/boilerplate-node-express/issues"
  },
  "keywords": [
    "autoprefixer",
    "boilerplate",
    "express",
    "node",
    "postcss",
    "pug",
    "sass",
    "scss",
    "template",
    "webpack",
    "website"
  ],
  "main": "server.js",
  "scripts": {
    "build": "npm-run-all -p build:*",
    "build:js": "webpack --hide-modules",
    "build:css": "node-sass -r --output-style compressed public/assets/scss -o public/assets/css && postcss -u autoprefixer public/assets/css/**/*.css -r",
    "clean": "rimraf static",
    "serve:dev": "nodemon server.js && babel-node --ignore public/assets/ --ignore public/",
    "serve:prod": "cross-env NODE_ENV=production nodemon server.js",
    "start": "npm run start:dev",
    "start:dev": "npm-run-all clean build:* -p watch:* serve:dev",
    "start:prod": "npm-run-all clean build:* serve:prod",
    "watch:css": "nodemon --watch public/assets/scss -e scss -x npm run build:css",
    "watch:js": "npm run build:js -- --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "cross-env": "^2.0.0",
    "css-loader": "^0.28.8",
    "express": "^4.14.0",
    "nodemon": "^1.10.0",
    "npm-run-all": "^2.3.0",
    "postcss-cli": "^2.5.2",
    "pug": "^2.0.0-beta4",
    "rimraf": "^2.5.4",
    "serve-favicon": "^2.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.13.0",
    "chunk-manifest-webpack-plugin": "^1.1.2",
    "eslint-loader": "^1.9.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^3.13.1",
    "open": "0.0.5",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.10",
    "pug-loader": "^2.3.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "sugarss": "^1.0.1",
    "webpack": "^3.10.0",
    "webpack-dashboard": "^1.1.1",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-notifier": "^1.5.0"
  }
}
